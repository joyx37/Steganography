<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp">

    <Button
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:id="@+id/pairDevicesButton"
        android:text="PAIR"
        android:layout_gravity="center"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:background="#ff9900"
        android:gravity="center"
        android:padding="2dp"
        android:textAlignment="center"
        android:clickable="true" />

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/deviceListView"
        android:layout_below="@+id/pairDevicesButton"
        android:layout_alignParentStart="true"
        android:layout_marginTop="54dp"
        android:layout_above="@+id/launchSteganosButton"
        android:choiceMode="singleChoice" />
    <Button
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:id="@+id/launchSteganosButton"
        android:text="STEGANOS"
        android:background="#ff9900"
        android:layout_alignTop="@+id/decryptImageButton"
        android:layout_alignParentStart="true"
        android:gravity="center"
        android:padding="2dp"
        android:textAlignment="center"
        android:clickable="true" />
    <Button
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:id="@+id/decryptImageButton"
        android:text="DECRYPT"
        android:layout_marginBottom="46dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:background="#ff9900"
        android:gravity="center"
        android:padding="2dp"
        android:textAlignment="center"
        android:clickable="true" />




</RelativeLayout>
